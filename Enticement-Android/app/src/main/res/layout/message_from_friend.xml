<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_8"
    android:paddingRight="@dimen/material_40"
    android:paddingTop="4dp">

    <ImageView
        android:layout_width="@dimen/chatroom_userprofile_size"
        android:layout_height="@dimen/chatroom_userprofile_size"
        android:src="@drawable/logo_image"
        android:background="@drawable/profile_circle_image"
        android:id="@+id/message.userimg"/>

    <TextView
        android:id="@+id/message.content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/material_40"
        android:background="@drawable/message_from_friend_bg"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/material_8"
        android:paddingLeft="@dimen/material_16"
        android:paddingRight="@dimen/material_16"
        android:paddingTop="@dimen/material_8"
        android:textColor="@color/chatroom_textcolor"
        android:textSize="@dimen/text_14"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/material_48"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/message.infoview"
        android:layout_below="@+id/message.content">
        <TextView
            android:id="@+id/message.timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Today, 9.18"
            android:textColor="@color/chatroom_textcolor"
            android:textSize="@dimen/text_12"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="@dimen/material_48"/>
    </RelativeLayout>

</RelativeLayout>