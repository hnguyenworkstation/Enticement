<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_40"
    android:paddingRight="@dimen/material_8">

    <ImageView
        android:id="@+id/message.sticker"
        android:layout_width="@dimen/sp_sticker_item_size"
        android:layout_height="@dimen/sp_sticker_item_size"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message.infoview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message.sticker">

        <TextView
            android:id="@+id/message.timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/material_8"
            android:text="Today, 9.18"
            android:textColor="@color/chatroom_textcolor"
            android:textSize="@dimen/text_12"
            android:layout_marginBottom="@dimen/material_8"/>

        <TextView
            android:id="@+id/message.status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seen"
            android:textStyle="bold"
            android:textSize="@dimen/text_12"
            android:paddingEnd="4dp"
            android:layout_marginBottom="@dimen/material_8"
            android:textColor="@color/chatroom_textcolor"
            android:layout_toStartOf="@+id/message.timestamp"/>
    </RelativeLayout>

</RelativeLayout>