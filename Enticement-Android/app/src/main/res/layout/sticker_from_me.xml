<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="@dimen/material_40"
    android:paddingRight="@dimen/material_8">

    <ImageView
        android:id="@+id/message.sticker"
        android:layout_width="@dimen/sp_sticker_item_size"
        android:layout_height="@dimen/sp_sticker_item_size"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/message.timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="@dimen/material_8"
        android:text="Today, 9.18"
        android:textColor="@color/chatroom_textcolor"
        android:textSize="@dimen/text_12"
        android:layout_below="@+id/message.sticker"
        android:layout_marginBottom="@dimen/material_8"
        android:layout_alignLeft="@+id/message.sticker"
        android:layout_alignStart="@+id/message.sticker"/>

    <ImageView
        android:id="@+id/message.checkbox"
        android:layout_below="@+id/message.content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/message.timestamp"
        android:src="@drawable/check_box"/>

    <TextView
        android:id="@+id/message.status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seen"
        android:textStyle="bold"
        android:textSize="@dimen/text_12"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/chatroom_textcolor"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/message.checkbox"/>

</RelativeLayout>